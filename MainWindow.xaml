<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:display_time_remaining"
        xmlns:controls="using:Microsoft.UI.Xaml.Controls"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="display_time_remaining.MainWindow"
        mc:Ignorable="d"
        Title="remaining time apps" Height="150" Width="400" ResizeMode="NoResize" Topmost="True" MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave" WindowStyle="None" AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid >
        <StackPanel x:Name="xNameStackPanelMain" Visibility="Hidden">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop x:Name="firstOffset" Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Viewbox Stretch="UniformToFill" HorizontalAlignment="Center">
                <TextBlock x:Name="textBlock" Text="00:00:00" TextAlignment="Center" Foreground="White"/>
            </Viewbox>
        </StackPanel>
        <Grid x:Name="xNameGridSettings" Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="220*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
                <TextBlock Text="Settings" HorizontalAlignment="Center" FontSize="20" Margin="0,15,0,5" />
                <Separator Margin="0,2,0,7"/>
            </StackPanel>
            <TextBlock Text="TargetTime: " Grid.Row="1" HorizontalAlignment="Right" TextAlignment="Right" VerticalAlignment="Center" />
            <TextBlock Text="DisplayFormat: " VerticalAlignment="Center" Grid.Row="2" HorizontalAlignment="Right" />
            <TextBlock Text="Interval(ms): " VerticalAlignment="Center" Grid.Row="3" HorizontalAlignment="Right" />
            <xctk:TimePicker x:Name="xNameTimePickerTargetTime" DefaultValue="00:00" CurrentDateTimePart="Hour24" MinWidth="100" DisplayDefaultValueOnEmptyText="True" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left"/>
            <TextBox x:Name="xNameTextBoxDisplayformat" Width="100" Text="hh\:mm\:ss\:ff" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="3" TextAlignment="Right" VerticalAlignment="Center"/>
            <xctk:IntegerUpDown x:Name="xNameIntegerUpDownInterval" Minimum="10" Increment="10" DisplayDefaultValueOnEmptyText="True" DefaultValue="50" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Left" Width="100"/>
            <Button Content="Start" Click="Button_Click" Grid.Row="4" HorizontalAlignment="Center" Width="100" VerticalAlignment="Center" Grid.ColumnSpan="3"/>
        </Grid>
    </Grid>
</Window>
